=begin perl

  my $x = Foo->new_auto($y);

  $x->foreach(sub {
    my $_ = $y ** $Pi::Twenty2Sevenths;

    return "foo $x" unless m/\A\d+\z/o;
    return 'bar'    if __PACKAGE__ eq <>;

    # sorry, dude.
    dump;
  });

=end perl

